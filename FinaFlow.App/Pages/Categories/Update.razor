@page "/categories/editar/{id:int}"

@inherits UpdateCategoriesPage

<MudText Typo="Typo.h3">Altera categoria</MudText>

<MudPaper Class="pa-8 mt-4">
    <EditForm Model="@InputModel" OnInvalidSubmit="OnValidSubmitAsync">
        <DataAnnotationsValidator />
        <MudTextField Label="Titulo"
                      Lines="1"
                      HelperText="Campo obrigatório"
                      @bind-Value="InputModel.Title"
                      For="() => InputModel.Title" />

        <MudTextField Label="Descrição"
                      Lines="1"
                      HelperText="Campo obrigatório"
                      @bind-Value="InputModel.Description"
                      For="() => InputModel.Description" />

        @if (IsBusy)
        {
            <MudProgressCircular Indeterminate="true" Color="Color.Primary" />
        }
        else
        {

            <MudButton ButtonType="ButtonType.Submit"
                       Variant="Variant.Filled"
                       Color="Color.Primary">Salvar</MudButton>
        }
    </EditForm>
</MudPaper>
